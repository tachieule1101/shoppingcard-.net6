@model ShoppingCart.DataAccess.DT0.ProductVM

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">List of Product</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="CreateUpdate" asp-controller="Product">Create New Product</a>
            <i class="bi bi-plus-circle"></i>
        </div>
    </div>
</div>

<table id="tableProduct" class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Category</th>
            <th>Action</th>
        </tr>
    </thead>
</table>

@section scripts{
    <script src="~/js/Product.js" asp-append-version="true"></script>
}

